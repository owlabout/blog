@import url("https://fonts.googleapis.com/css?family=Roboto:100,400|VT323");
@require './config'
@require './nprogress'
@require './code'
@require './custom-blocks'
@require './toc'

html
  font-size: 62.5%
  margin: 0

body
  margin 0
  padding 0
  font-size: 1.6rem;
  color: $textColor
  font-family "Roboto", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

a {
  color: inherit;
  text-decoration: none;
}

heading(size) {
  margin: -8rem 0 0 auto;
  font-family: "VT323", monospace;
  font-size: size;
  font-weight: normal;
  max-width: 68rem;
  padding: 9rem 1rem 0;
  position: relative;

  .header-anchor {
    position: absolute;
    left: -1ex;
    opacity: 0;
  }

  &:hover .header-anchor {
    opacity: 1;
    &:hover {
      color: $primary;
    }
  }
}


h1 {
  heading(4.8rem)
}

.container,
.content.custom {
  max-width: 1440px;
  margin: 0 auto;
}
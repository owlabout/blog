@import url("https://fonts.googleapis.com/css?family=Roboto:100,400|VT323");
@require './config'
@require './nprogress'
@require './code'
@require './custom-blocks'
@require './toc'

html
  font-size: 62.5%
  margin: 0

body
  margin 0
  padding 0
  font-size: 1.6rem;
  color: $textColor
  font-family "Roboto", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

a {
  color: inherit;
  text-decoration: none;
}

heading(size) {
  margin: -8rem 0 0 auto;
  padding: 9rem 1rem 0 1rem;
  font-family: "VT323", monospace;
  font-size: size;
  font-weight: normal;
  position: relative;
  max-width: 69rem;
  width: 66.66%;

  .header-anchor {
    position: absolute;
    left: -1ex;
    opacity: 0;
  }

  &:hover .header-anchor {
    opacity: 1;
    &:hover {
      color: $primary;
    }
  }
}


h1 {
  heading(4.8rem)
  }
h2 {
  heading(3rem)
}
h3 {
  heading(2.4rem)
}

.container,
.content.custom {
  max-width: 1440px;
  margin: 0 auto;
}

.content.custom {
  min-height: calc(100vh - 9rem);
}

footer {
  height: 55px;
  margin-top: -10px;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

footer img {
  width: 45px;
  height: 45px;
  margin-right: 20px;
}

footer a {
  color: $textColor;
  margin-right: 10px;
  padding: 15px;
  position: relative;

  &:before, &:after {
      box-sizing: border-box;
      content: '';
      position: absolute;
      height: 0;
      width: 0;
      transition: all .3s ease-in-out;
      transition-property: width, height;
      opacity: 0;
      border: 1px solid $primary;
    }

    &:before {
      top: .5rem;
      left: .5rem;
      border-right: 0;
      border-bottom: 0;
    }

    &:after {
      bottom: .5rem;
      right: .5rem;
      border-left: 0;
      border-top: 0;
    }

    &:hover:before,
    &:hover:after {
      opacity: 1;
      height: 1.2rem;
      width: 1.2rem;
    }
}
